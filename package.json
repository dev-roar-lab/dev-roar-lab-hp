{
  "name": "dev-roar-lab-hp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "TURBOPACK_CACHE_DISABLED=1 next dev --turbopack",
    "dev:clean": "rm -rf .next && TURBOPACK_CACHE_DISABLED=1 next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "verify-format": "prettier src/ -c",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ci": "npm-run-all --serial verify-format lint build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:storybook": "storybook build -o docs-site/storybook",
    "docs:typedoc": "typedoc",
    "docs:portal": "cp -r docs-site/public/* docs-site/",
    "docs:build": "npm-run-all --parallel docs:storybook docs:typedoc && npm run docs:portal",
    "docs:clean": "rm -rf docs-site/storybook docs-site/api docs-site/index.html docs-site/assets",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "framer-motion": "12.23.24",
    "next": "15.5.4",
    "next-intl": "4.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "5.5.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.1",
    "@eslint/eslintrc": "3.3.1",
    "@storybook/addon-docs": "9.1.13",
    "@storybook/addon-onboarding": "9.1.13",
    "@storybook/nextjs-vite": "9.1.13",
    "@storybook/react": "9.1.13",
    "@tailwindcss/postcss": "4.1.4",
    "@types/node": "22.15.2",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vitest/browser": "3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "9.37.0",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-storybook": "9.1.13",
    "geist": "1.3.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "next-mdx-remote": "5.0.0",
    "npm-check-updates": "18.0.1",
    "npm-run-all": "4.1.5",
    "playwright": "1.52.0",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "serve": "14.2.5",
    "storybook": "9.1.13",
    "sugar-high": "0.9.3",
    "tailwindcss": "4.1.4",
    "typedoc": "0.28.14",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
